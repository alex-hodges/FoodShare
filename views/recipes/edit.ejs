<% include ../partials/header %>
<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%= recipe.name %></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/recipes/<%=recipe._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="recipe[name]" id="name" value="<%= recipe.name %>">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="recipe[image]" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." value="<%= recipe.image %>" required>
                <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
            </div>
            <div class="form-group">
                <label for="cost">Cost</label>
                <input class="form-control" type="number" name="recipe[price]" id="cost" value="<%= recipe.price %>" step="0.01" min="0" required>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="recipe[description]" id="description" value="<%= recipe.description %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Update!</button>
            </div>
        </form>
        <a href="/recipes">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>
